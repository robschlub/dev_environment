# Development environment for:
#   - Python/JS Linting
#   - Python/JS Testing
#   - JS Building
#   - Flask debugging

FROM rschlub/nodepy

# ## General ##
WORKDIR /opt/app

# This is the folder that will be shared with the docker host machine
RUN mkdir app
RUN mkdir tests
RUN mkdir src



# ## Javascript ##

# Node packages
ADD containers/dev/package.json .

RUN npm install --save 		 react@16.4.0 \
    											 react-dom@16.4.0

RUN npm install --save-dev eslint@4.19.1 \
													 eslint-plugin-import@2.12.0 \
													 eslint-config-airbnb-base@12.1.0 \
													 eslint-plugin-flowtype@2.47.1 \
													 eslint-plugin-react@7.8.2 \
													 webpack@4.8.3 \
													 webpack-cli@2.1.4 \
													 babel-preset-env@1.7.0 \
													 babel-loader@7.1.4 \
													 babel-core@6.26.3 \
													 babel-preset-flow@6.23.0 \
													 babel-preset-react@6.24.1 \
													 flow-bin@0.68.0 \
													 uglifyjs-webpack-plugin@1.2.5 \
													 babel-eslint@8.2.3 \
													 jest@22.4.4 \
													 babel-jest@22.4.4 \
    											 regenerator-runtime@0.11.1 \
    											 eslint-plugin-jest@21.15.2 \
    											 clean-webpack-plugin@0.1.19 \ 		
    											 mini-css-extract-plugin@0.4.0 \	
    											 css-loader@0.28.11 \							
    											 sass-loader@6.0.7 \							
    											 node-sass@4.9.0 \								
												   postcss-loader@2.1.5 \						
												   autoprefixer@8.5.0 \
													 react-test-renderer@16.4.0 \
													 whatwg-fetch@2.0.4 \
													 babel-polyfill@6.26.0 \
													 stylelint-config-standard@18.2.0 \
													 stylelint@9.2.1 \ 
													 stylelint-scss@3.1.0 \
													 postcss@6.0.22

# Linting
ADD .eslintrc.json .
ADD .eslintignore .
ADD .flowconfig .
ADD .stylelintrc .
ADD .stylelintignore .

# Packaging
ADD containers/dev/webpack.config.js .
ADD .babelrc .

# Update path so eslint can be run from anywhere
ENV PATH="/opt/app/node_modules/.bin:${PATH}"



# ## Python ##

# Python packages
ADD containers/dev/requirements_dev.txt requirements.txt
RUN pip install -r requirements.txt

# Python linting
ADD .flake8 .
ADD containers/dev/pytest.ini .

# Environment variable for flask
ENV FLASK_APP app/my_app.py
ENV FLASK_DEBUG 1

# Dev server script
ADD containers/dev/dev-server.sh .

# Use this is you want to load straight into flask
# CMD ["flask", "run", "--host=0.0.0.0"]

ENTRYPOINT ["bash"]